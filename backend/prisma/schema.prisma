generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// SHOP MODEL
model Shop {
  id        Int      @id @default(autoincrement())
  name      String
  floor     Int
  openingHours String
  url       String
  logoUrl   String
  images    ShopImage[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ShopImage {
  id        Int      @id @default(autoincrement())
  shop      Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)
  shopId    Int
  url       String
  createdAt DateTime @default(now())
}
